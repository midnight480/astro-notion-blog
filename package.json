{
  "name": "astro-notion-blog",
  "type": "module",
  "version": "0.10.0",
  "private": true,
  "engines": {
    "node": "22.16.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:cached": "npm run cache:fetch && astro build",
    "build:fast": "CACHE_CONCURRENCY=8 npm run cache:fetch && astro build",
    "build:parallel": "CACHE_CONCURRENCY=12 npm run cache:fetch && astro build",
    "build:stable": "CACHE_CONCURRENCY=4 npm run cache:fetch && astro build",
    "build:skip-cache": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .js,.ts,.astro src",
    "format": "npx prettier --write .",
    "cache:fetch": "node scripts/blog-contents-cache.cjs",
    "cache:purge": "nx reset && rm -f tmp/*",
    "_fetch-notion-blocks": "node scripts/retrieve-block-children.cjs",
    "test:middleware": "node functions/test-middleware.cjs",
    "test:robots": "npx tsx src/lib/test-robots.ts",
    "test:canonical": "npx tsx src/lib/test-canonical-url.ts",
    "test:layout": "npx tsx src/lib/test-layout-integration.ts",
    "test:redirect": "npx tsx src/lib/test-redirect-functionality.ts",
    "test:seo-validation": "npx tsx src/lib/seo-validation-tools.ts",
    "test:e2e": "npx tsx src/lib/test-e2e-integration.ts",
    "test:seo": "npm run test:middleware && npm run test:robots && npm run test:canonical && npm run test:layout",
    "test:all": "npm run test:seo && npm run test:redirect && npm run test:e2e"
  },
  "dependencies": {
    "@astrojs/react": "^4.2.7",
    "@astrojs/rss": "^4.0.12",
    "@iconify-json/octicon": "^1.2.19",
    "@notionhq/client": "^5.6.0",
    "@supercharge/promise-pool": "^3.2.0",
    "astro": "^5.16.3",
    "astro-icon": "^1.1.5",
    "async-retry": "^1.3.3",
    "axios": "^1.12.0",
    "exif-be-gone": "^1.5.1",
    "katex": "^0.16.21",
    "mermaid": "^11.12.1",
    "metascraper": "^5.49.7",
    "metascraper-description": "^5.47.1",
    "metascraper-image": "^5.47.1",
    "metascraper-title": "^5.46.18",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "^19.1.0",
    "@types/async-retry": "^1.4.9",
    "@types/js-base64": "^3.3.1",
    "@types/katex": "^0.16.7",
    "@types/metascraper": "^5.14.3",
    "@types/metascraper-description": "^5.42.0",
    "@types/metascraper-image": "^5.42.0",
    "@types/metascraper-title": "^5.42.0",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@typescript-eslint/typescript-estree": "^8.41.0",
    "cli-progress": "^3.12.0",
    "eslint": "^9.34.0",
    "eslint-plugin-astro": "^1.3.1",
    "nx": "^21.6.10"
  },
  "nx": {
    "targets": {
      "_fetch-notion-blocks": {
        "inputs": [
          "!{projectRoot}/**/*",
          "!{projectRoot}/**/.*",
          "!{projectRoot}/**/.*/**/*",
          {
            "env": "DATABASE_ID"
          }
        ],
        "outputs": [
          "{projectRoot}/tmp"
        ]
      }
    },
    "includedScripts": [
      "_fetch-notion-blocks"
    ]
  }
}
